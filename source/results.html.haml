#results
  .bacon_number
    %p= Phil.name
    %mark= Phil.pick 1..9
    %p= Phil.name
  .result_list
    - connections = Phil.pick(1..10)
    %h3 #{connections} Paths
    %h4 (with #{Phil.pick(1..10)} degrees of separation)
    - connections.times do
      %ul
        %li
          %ul
            - Phil.loop(1..5) do
              %li.actor= link_to Phil.name, "#"
              %li.movie= link_to "#{Phil.words(1..5).capitalize} (#{1914 + Phil.pick(1..100)})", "#"
            %li.actor= link_to Phil.name, "#"
